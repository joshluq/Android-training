<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/sizeLayout"
    tools:context="com.example.adiosesr.androidtraining.MainActivity">

   <Button
       android:id="@+id/btnBook"
       android:layout_width="@dimen/dimenWidth"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dimenEightdp"
       android:layout_weight="1"
       android:text="@string/buttonLibro"
       app:layout_constraintEnd_toStartOf="@+id/btnList"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       tools:ignore="ButtonStyle" />

   <Button
       android:id="@+id/btnList"
       android:layout_width="@dimen/dimenWidth"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dimenEightdp"
       android:layout_weight="1"
       android:text="@string/buttonLista"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toEndOf="@+id/btnBook"
       app:layout_constraintTop_toTopOf="parent"
       tools:ignore="ButtonStyle" />

    <FrameLayout
        android:id="@+id/fragmentBook"
        android:layout_width="@dimen/dimenWidth"
        android:layout_height="@dimen/dimenWidth"
        android:layout_marginTop="@dimen/dimenEightdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnList"
        app:layout_constraintStart_toStartOf="@+id/btnBook"
        app:layout_constraintTop_toBottomOf="@+id/btnBook" />
</android.support.constraint.ConstraintLayout>
