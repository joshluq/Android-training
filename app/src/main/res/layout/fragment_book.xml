<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimeFragBook"
    tools:context="com.example.adiosesr.androidtraining.BookFragment">

    <TextView
        tools:text="@tools:sample/full_names"
        android:id="@+id/tvName"
        android:textSize="@dimen/dimeFragBook"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/dimeFragBook"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/dimeFragBook"
        android:textStyle="bold"
        tools:text="@tools:sample/lorem"
        android:id="@+id/valorId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/dimeFragBook"
        android:textStyle="bold"
        tools:text="@tools:sample/full_names"
        android:id="@+id/valorNameBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/dimeFragBook"
        android:textStyle="bold"
        tools:text="@tools:sample/us_zipcodes"
        android:id="@+id/valorPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/dimeFragBook"
        android:textStyle="bold"
        tools:text="@tools:sample/full_names"
        android:id="@+id/valorAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
